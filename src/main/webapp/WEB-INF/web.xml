<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">


    <filter>
        <filter-name>EmptyUrlFilter</filter-name>
        <filter-class>controllers.filters.EmptyURLFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EmptyUrlFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>StaticResourceFilter</filter-name>
        <filter-class>controllers.filters.StaticResourceFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>StaticResourceFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>



    <filter>
        <filter-name>JWTFilter</filter-name>
        <filter-class>controllers.filters.JWTFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>JWTFilter</filter-name> <!-- placeholder-->
        <url-pattern>/view/profile/*</url-pattern> <!-- placeholder-->
        <url-pattern>/checkout</url-pattern> <!-- placeholder-->
    </filter-mapping>

    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>controllers.servlets.FrontController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/view/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controllers.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controllers.servlets.RegisterServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RetrieveProducts</servlet-name>
        <servlet-class>controllers.servlets.RetrieveProductsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>controllers.servlets.HomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>controllers.servlets.ProfileServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProductsServlet</servlet-name>
        <servlet-class>controllers.servlets.ProductsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProductPageServlet</servlet-name>
        <servlet-class>controllers.servlets.ProductPageServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ReviewServlet</servlet-name>
        <servlet-class>controllers.servlets.ReviewServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EditProfileServlet</servlet-name>
        <servlet-class>controllers.servlets.EditProfileServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EmailValidationServlet</servlet-name>
        <servlet-class>controllers.servlets.EmailValidationServlet</servlet-class>
    </servlet>

    <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/404.html</location>
    </error-page>




</web-app>